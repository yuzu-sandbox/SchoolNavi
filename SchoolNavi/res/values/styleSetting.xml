<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SettingNameLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginSide</item>
        <item name="android:layout_marginRight">@dimen/marginSide</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SettingNameImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:scaleType">fitStart</item>
    </style>
    <style name="SettingNameText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SettingContentLinearH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>
    <style name="SettingContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SettingContentEnter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/mark_small</item>
    </style>
    <style name="SettingContentLinearV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/backwhite_border</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/marginSide</item>
        <item name="android:layout_marginRight">@dimen/marginSide</item>
    </style>
    <style name="SettingSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:checked">true</item>
        <item name="android:textOn">ON</item>
        <item name="android:textOff">OFF</item>
    </style>
</resources>
